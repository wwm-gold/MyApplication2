<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<!--主菜单界面-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <include layout="@layout/top_bar"/>
        <LinearLayout android:orientation="horizontal"
            android:id="@+id/real_data"
            android:background="#ffffffff"
            android:layout_width="match_parent"
            android:layout_height="50.0dip"
            android:clickable="true">

            <ImageView
                android:layout_width="50.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:padding="10.0dip"
                android:src="@drawable/shuju_sel"/>

            <TextView android:textSize="16.0dip"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10.0dip"
                android:text="实时数据" />
        </LinearLayout>
        <include layout="@layout/split_line_gray" />
        <LinearLayout android:orientation="horizontal"
            android:id="@+id/powerQuality"
            android:background="#ffffffff"
            android:layout_width="match_parent"
            android:layout_height="50.0dip"
            android:clickable="true">

            <ImageView
                android:layout_width="50.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:padding="10.0dip"
                android:src="@drawable/zhuzhuangtu"/>

            <TextView android:textSize="16.0dip"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10.0dip"
                android:text="电能质量" />
        </LinearLayout>
        <include layout="@layout/split_line_gray" />
        <LinearLayout android:orientation="horizontal"
            android:id="@+id/communicationStatus"
            android:background="#ffffffff"
            android:layout_width="match_parent"
            android:layout_height="50.0dip"
            android:clickable="true">

            <ImageView
                android:layout_width="50.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:padding="10.0dip"
                android:src="@drawable/connect"/>

            <TextView android:textSize="16.0dip"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10.0dip"
                android:text="通讯状态" />
        </LinearLayout>
        <include layout="@layout/split_line_gray" />
        <LinearLayout android:orientation="horizontal"
            android:id="@+id/faultInfo"
            android:background="#ffffffff"
            android:layout_width="match_parent"
            android:layout_height="50.0dip"
            android:clickable="true">

            <ImageView
                android:layout_width="50.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:padding="10.0dip"
                android:src="@drawable/about_our"/>

            <TextView android:textSize="16.0dip"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10.0dip"
                android:text="故障信息" />
        </LinearLayout>
        <include layout="@layout/split_line_gray" />
        <LinearLayout android:orientation="horizontal"
            android:id="@+id/parameterSet"
            android:background="#ffffffff"
            android:layout_width="match_parent"
            android:layout_height="50.0dip"
            android:clickable="true">

            <ImageView
                android:layout_width="50.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:padding="10.0dip"
                android:src="@drawable/shezhi_sel"/>

            <TextView android:textSize="16.0dip"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10.0dip"
                android:text="参数设置" />
        </LinearLayout>
        <include layout="@layout/split_line_gray" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>